{
  "env": {
    "jest": true,
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "import",
    "babel",
    "react",
    "react-hooks",
    "@typescript-eslint",
    "prettier"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": ["./.eslintrc.rules.js", "prettier", "prettier/react"],
  "rules": {},
  "overrides": [
    {
      "files": ["*.stories.{js,ts,tsx}"],
      "rules": {"react/prop-types": "off"}
    }
  ],
  "globals": {
    "hljs": "readonly",
    "html_beautify": "readonly",
    "STORYBOOK_ENV": "readonly"
  }
}
