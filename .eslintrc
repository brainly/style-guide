{
  "env": {
    "jest": true
  },
  "parser": "babel-eslint",
  "extends": [
    "brainly-react"
  ],
  "rules": {
    "max-len": ["error", { "code": 120, "ignoreComments": true }],
    "react/no-multi-comp": "off"
  },
  "globals": {
    "hljs": "readonly",
    "html_beautify": "readonly"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    }
  }
}
