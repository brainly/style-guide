{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": false,
    "downlevelIteration": true,
    "lib": ["dom", "es5", "es2015.collection", "es2015.iterable", "es2020"],
    "baseUrl": ".",
    "paths": {
      "*": ["*", "./src/components/*", "./src/docs/*"]
    }
  },
  "typeRoots": ["src/typings", "node_modules/@types"],
  "include": ["src/**/*"]
}
